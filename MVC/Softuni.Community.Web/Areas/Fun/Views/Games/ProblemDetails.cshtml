@using Softuni.Community.Web.Common

@model Softuni.Community.Web.Models.ViewModels.ProblemDetailsViewModel

@{

    ViewData["Title"] = "Problem Details";
}

<h1 class="text-center mt-4 mb-4">@ViewData["Title"]</h1>
<div>
    <div class="text-center">
        <section class="w-50 mx-auto">
            <div class="m-5 p-0">
                <div class="text-left p-2">
                    <h2 class="jokeLink text-center">@Model.ProblemContent</h2>
                </div>
                <div class="row">
                    <h3 class="ml-auto">Right Answer :</h3>
                    <h3 class="pl-2 liked mr-auto">    @Model.RightAnswer</h3>
                </div>
                <div>
                    <h2>Answers:</h2>
                    @foreach (var item in Model.Answers)
                    {
                        <div>
                            <h3 class="disliked">@item</h3>
                        </div>
                    }
                </div>
            </div>
        </section>
    </div>
    @if (User.IsInRole(Role.Admin))
    {
    <div class="mx-auto">
        @{
            var parameters = new Dictionary<string, string>
            {
                { Query.Id, $"{Model.Id}" },
            };
        }
        <p>Need modifications? <a class="delete" asp-area="Fun" asp-controller="Games" asp-action="EditProblem" asp-all-route-data="parameters">EDIT</a> it.</p>
        <p>You can also <a class="delete" asp-area="Fun" asp-controller="Games" asp-action="DeleteProblem" asp-all-route-data="parameters">DELETE</a> it.</p>
    </div>
    }
</div>